<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/containerStyle">

    <include
        android:id="@+id/vw_home_detail_toolbar_bottom_line"
        layout="@layout/vw_toolbar_bottom_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/vw_goal_list_toolbar_bottom_line">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_home_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/vw_home_detail_toolbar_bottom_line" />

        <include layout="@layout/layout_validation_recycler_view" />

    </FrameLayout>

</RelativeLayout>