<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_home_detail_thumbnail"
            android:layout_width="70sp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/txt_home_detail_title"
            style="@style/txtTitleStyle"
            android:layout_toRightOf="@id/img_home_detail_thumbnail"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/txt_home_detail_subTitle"
            style="@style/txtSubTitleStyle"
            android:layout_below="@id/txt_home_detail_title"
            android:layout_toRightOf="@id/img_home_detail_thumbnail"
            android:paddingLeft="10dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>