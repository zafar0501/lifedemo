<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_goal_section_item_row_goal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:scrollHorizontally="true"
            android:text="ETW Competitive Intelligence (Discussion Only)"
            android:textColor="@color/charcoalGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_goal_section_item_row_goal_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_goal_section_item_row_goal_title"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Plan Goal"
            android:textColor="@color/warnGray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_goal_section_item_row_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="-2dp"
            android:background="@color/midGreen"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:text="On Track"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_goal_section_item_row_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/txt_goal_section_item_row_state"
            android:layout_toRightOf="@+id/txt_goal_section_item_row_state"
            android:padding="5dp"
            android:paddingLeft="20dp"
            android:text="DUE: "
            android:textColor="@color/warnGray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_goal_section_item_row_status"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="-5dp"
            android:background="@color/midGreen"
            android:padding="0dp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>